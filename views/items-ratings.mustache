<!DOCTYPE html>
<html lang="en">
<head>
  {{> partials/header }}
  <title>Items App</title>
</head>
<body>
  {{> partials/main-navbar }}

  <script src="libs/mustache/mustache.js"></script>
  <script src="/scripts/items-ratings.js"></script>

  <div class="container">
    <div class="row mx-2">

      <nav class="col-md-4 col-lg-3 d-md-block bg-light sidebar">
        <div class="position-sticky">
          <a href="/items-ratings" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
              <span class="fs-4">Items Ratings management</span>
          </a>
          <hr>
          <ul class="nav nav-pills flex-column">
            <li><a href="#" id="items-ratings-nav-get-item-avg-rating" class="nav-link link-dark active">Get Item Rating</a></li>
            <li><a href="#" id="items-ratings-nav-get-all-ratings-for-item" class="nav-link link-dark">Get all Ratings for Item</a></li>
            <li><a href="#" id="items-ratings-nav-get-random-item-rating" class="nav-link link-dark">Get random Rating</a></li>
            <li><a href="#" id="items-ratings-nav-add-new-item-rating" class="nav-link link-dark">Add new Rating</a></li>
          </ul>
        </div>
      </nav>

      <div class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
        <div class="container justify-content-center align-items-center" style="max-width: 500px;">

          <div id="get-item-avg-rating" class="row">
            <h2 class="text-center">Get Item Rating</h2>
            <input type="number" id="get-item-avg-rating-item-id" class="form-control mb-2" placeholder="Item ID" required>
            <button id="get-item-avg-rating-button" class="btn btn-primary mb-2">Get Item Rating</button>
            <hr>
            <div id="get-item-avg-rating-result" class="container"></div>
          </div>

          <div id="get-all-ratings-for-item" class="row d-none">
            <h2 class="text-center">All rating records for Item</h2>
            <input type="number" id="get-all-ratings-for-item-item-id" class="form-control mb-2" placeholder="Item ID" required>
            <button id="get-all-ratings-for-item-button" class="btn btn-primary mb-2">Refresh</button>
            <hr>
            <div id="get-all-ratings-for-item-result" class="container"></div>
          </div>

          <div id="get-random-item-rating" class="row d-none">
            <h2 class="text-center">Random Rating for Random Item</h2>
            <button id="get-random-item-rating-button" class="btn btn-primary mb-2">Get another</button>
            <hr>
            <div id="get-random-item-rating-result" class="container"></div>
          </div>

          <div id="add-new-item-rating" class="row d-none">
            <h2 class="text-center">Add new Rating for Item</h2>
            <input type="text" id="add-new-item-rating-item-id" class="form-control mb-2" placeholder="Item ID" required>
            <input type="number" min="0" max="5" step="0.1" id="add-new-item-rating-rating" class="form-control mb-2" placeholder="Item Rating" required>
            <button id="add-new-item-rating-button" class="btn btn-primary mb-2">Add Rating</button>
            <hr>
            <div id="add-new-item-rating-result" class="container"></div>
          </div>

        </div>
      </div>

    </div>
  </div>
</body>
</html>