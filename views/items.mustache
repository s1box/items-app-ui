<!DOCTYPE html>
<html lang="en">
<head>
  {{> partials/header }}
  <title>Items App</title>
</head>
<body>
  {{> partials/main-navbar }}

  <script src="libs/mustache/mustache.js"></script>
  <script src="/scripts/items.js"></script>

  <div class="container">
    <div class="row mx-2">

      <nav class="col-md-4 col-lg-3 d-md-block bg-light sidebar">
        <div class="position-sticky">
          <a href="/items" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
              <span class="fs-4">Items management</span>
          </a>
          <hr>
          <ul class="nav nav-pills flex-column">
            <li><a href="#" id="items-nav-get-item" class="nav-link link-dark active">Get Item</a></li>
            <li><a href="#" id="items-nav-get-random-item" class="nav-link link-dark">Get random Item</a></li>
            <li><a href="#" id="items-nav-get-all-items" class="nav-link link-dark">Get all Items</a></li>
            <li><a href="#" id="items-nav-create-item" class="nav-link link-dark">Create Item</a></li>
            <li><a href="#" id="items-nav-delete-item" class="nav-link link-dark">Delete Item</a></li>
          </ul>
        </div>
      </nav>

      <div class="col-md-8 ms-sm-auto col-lg-9 px-md-4">
        <div class="container justify-content-center align-items-center" style="max-width: 500px;">

          <div id="get-item" class="row">
            <h2 class="text-center">Get Item by ID</h2>
            <input type="number"  id="get-item-id" class="form-control mb-2" placeholder="Item ID" required>
            <button id="get-item-button" class="btn btn-primary mb-2">Get Item info</button>
            <hr>
            <div id="get-item-result" class="container"></div>
          </div>

          <div id="get-random-item" class="row d-none">
            <h2 class="text-center">Random Item</h2>
            <button id="get-random-item-button" class="btn btn-primary mb-2">Get another</button>
            <hr>
            <div id="get-random-item-result" class="container"></div>
          </div>

          <div id="get-all-items" class="row d-none">
            <h2 class="text-center">All registered Items table</h2>
            <button id="get-all-items-button" class="btn btn-primary mb-2">Refresh</button>
            <hr>
            <div id="get-all-items-result" class="container"></div>
          </div>

          <div id="create-item" class="row d-none">
            <h2 class="text-center">Create new Item</h2>
            <input type="text" id="create-item-name" class="form-control mb-2" placeholder="Item Name" required>
            <input type="number" step="0.1" id="create-item-num" class="form-control mb-2" placeholder="Item Number" required>
            <button id="create-item-button" class="btn btn-primary mb-2">Create Item</button>
            <hr>
            <div id="create-item-result" class="container"></div>
          </div>

           <div id="delete-item" class="row d-none">
            <h2 class="text-center">Delete Item</h2>
            <input type="number" id="delete-item-id" class="form-control mb-2" placeholder="Item ID" required>
            <button id="delete-item-button" class="btn btn-primary mb-2">Delete Item</button>
            <hr>
            <div id="delete-item-result" class="container"></div>
          </div>

        </div>
      </div>

    </div>
  </div>
</body>
</html>